@{
    ViewData["Title"] = "Home Page";
}

@model User
<div class="flex flex-col min-h-screen justify-center items-center">
    <h1 class="text-4xl text-indigo-100 mb-5 font-semibold capitalize">Employee Register</h1>
    <form class="w-full max-w-lg bg-blue-900 bg-opacity-30 rounded shadow-lg py-6 px-5">
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="block uppercase tracking-wide text-indigo-100 text-xs font-bold mb-2" for="grid-first-name">
            First Name
        </label>
        <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="text" placeholder="Jane">
        </div>
        <div class="w-full md:w-1/2 px-3">
        <label class="block uppercase tracking-wide text-indigo-100 text-xs font-bold mb-2" for="grid-last-name">
            Last Name
        </label>
        <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name" type="text" placeholder="Doe">
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-indigo-100 text-xs font-bold mb-2" for="grid-password">
            Email
        </label>
        <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-password" type="text" placeholder="example@email.com">
        @* <p class="text-indigo-100 text-xs italic">One uppercase, one lowercase, one number, and a special character minimum</p> *@
        </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="block uppercase tracking-wide text-indigo-100 text-xs font-bold mb-2" for="grid-first-name">
            Password
        </label>
        <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="grid-first-name" type="password" placeholder="********">
        </div>
        <div class="w-full md:w-1/2 px-3">
        <label class="block uppercase tracking-wide text-indigo-100 text-xs font-bold mb-2" for="grid-last-name">
            Confirm
        </label>
        <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-last-name" type="password" placeholder="********">
        </div>
    </div>
        <button class="bg-indigo-700 hover:bg-indigo-500 text-indigo-100 font-bold py-2 px-4 rounded w-full shadow-lg">Submit</button>
        <p class="text-sm text-indigo-100 italic mt-4">Already registered? <a class="text-indigo-300 hover:text-indigo-100 underline" href="/login">Login Here</a></p>
    </form>
</div>