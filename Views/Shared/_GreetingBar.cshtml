<div class="md:ml-24 md:mr-5 bg-slate-800 shadow-lg px-6 py-5 w-full md:w-auto">
        <div class="flex justify-between">
            <div class="flex flex-col gap-2">
                <p class="text-slate-50 text-xl font-light tracking-wide">Welcome back</p>
                <span class="text-slate-50 font-bold text-3xl">@Context.Session.GetString("FirstName") @Context.Session.GetString("LastName")</span>
            </div>
            <div class="flex flex-col gap-2">
                <p class="text-slate-50 text-xl">@DateTime.Now.ToLocalTime().ToString("dddd"),</p>
                <p class="text-slate-50 text-xl">@DateTime.Now.ToLocalTime().ToString("MMMM dd, yyyy")</p>
            </div>
        </div>
        <h1 class="text-slate-50 text-5xl"></h1>
    </div>