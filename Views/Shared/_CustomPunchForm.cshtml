@model Punch
<div class="bg-yellow-700 rounded-t-lg py-2 w-full md:w-1/3"></div>
<form
    class="w-full md:w-1/3 flex flex-col gap-3 bg-slate-700 shadow-lg pt-2 pb-4 px-5" 
    action='/users/timeclock/@Context.Session.GetInt32("UserId")/punch/custom' 
    method="post">
    <h2 class="text-slate-50 text-xl text-center uppercase font-bold text-slate-200">Custom Punch</h2>
    <div class="flex flex-col">
        <div class="w-full">
            <label class="text-slate-400">Date</label>
                <input
                    asp-for="TimeIn"
                    type="date"
                    class="appearance-none block uppercase w-full bg-slate-800 text-slate-500 rounded py-1 px-4 mb-3 leading-tight focus:outline-none focus:bg-slate-800" />
        </div>
        <div class="w-full flex justify-center gap-2">
            <div class="w-1/2">
                <label class="text-slate-400">Time In</label>
                    <input
                        asp-for="TimeIn"
                        type="time"
                        class="appearance-none block uppercase w-full bg-slate-800 text-slate-500 rounded py-1 pl-1 mb-3 leading-tight focus:outline-none focus:bg-slate-800" />
            </div>
            <div class="w-1/2">
                <label class="text-slate-400">Time Out</label>
                    <input
                        type="time"
                        class="appearance-none block uppercase w-full bg-slate-800 text-slate-500 rounded py-1 pl-1 mb-3 leading-tight focus:outline-none focus:bg-slate-800" />
            </div>
        </div>
    </div>
    <button class="rounded bg-yellow-700 text-slate-50 font-medium uppercase shadow-lg">Submit</button>
</form>