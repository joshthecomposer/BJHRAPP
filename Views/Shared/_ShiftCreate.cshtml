<div class="bg-slate-700 p-4 flex flex-col gap-2 justify-center items-center">
    <div class="p-5 flex flex-col gap-4 w-52 items-center justify-between">
        <p class="text-xl text-center capitalize">
            Create Shift
        </p>
    </div>
    @model Shift
    <form action="/shift/create" method="post" class="w-full max-w-lg bg-slate-900 bg-opacity-30 rounded shadow-lg py-6 px-6">
        <div class="flex flex-wrap -mx-3 mb-6">
            <label asp-for="User" class="block uppercase tracking-wide text-indigo-100 text-xs font-bold mb-2">User</label>
            <select asp-for="User" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">'
                @foreach(User u in ViewBag.Users)
                {
                    <option value="@u.Id">@u.FirstName @u.LastName</option>
                }
            </select>
        </div>

        <div class="flex flex-wrap -mx-3 mb-6">
            <label for="Block" class="block uppercase tracking-wide text-indigo-100 text-xs font-bold mb-2">Shift Date</label>
            <input for="ShiftDate" name="ShiftDate" type="date" required class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"/>
        </div>

        <div class="flex flex-wrap -mx-3 mb-6">
            <label for="Block" class="block uppercase tracking-wide text-indigo-100 text-xs font-bold mb-2">Schedule Block</label>
            <select for="Block" name="Block" class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                @{int i = 0;}
                @foreach(String s in ViewBag.PresetShifts)
                {
                    <option value="@i">@s</option>
                    i++;
                }
            </select>
        </div>

        <div class="flex flex-wrap -mx-3 mb-6">
            <button type="submit" class="font-bold uppercase rounded bg-slate-500 text-slate-900 px-4 py-2 w-full">
                Create Shift
            </button>
        </div>
    </form>
</div>