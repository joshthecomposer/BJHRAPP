
@{
    ViewBag.PunchStatusColor = Model.ClockedIn ? "green" : "red";
}

<style>
    button:active {
        transform: translateY(3px);
    }
</style>

<div class="flex md:flex-row flex-col gap-3">
    <div class="bg-slate-700 py-5 px-3 flex flex-col gap-2 justify-center items-center">
        <div class="rounded-lg border-4 border-@ViewBag.PunchStatusColor-500 py-10 flex flex-col gap-4 w-52 items-center justify-between">
            <p class="text-@ViewBag.PunchStatusColor-500 text-xl text-center capitalize">
                @(Model.ClockedIn ? "Currently Working" : "Clocked Out")
            </p>
            <svg class="fill-@ViewBag.PunchStatusColor-500 w-[130px] h-[130px]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M24 2v22h-24v-22h3v1c0 1.103.897 2 2 2s2-.897 2-2v-1h10v1c0 1.103.897 2 2 2s2-.897 2-2v-1h3zm-2 6h-20v14h20v-14zm-2-7c0-.552-.447-1-1-1s-1 .448-1 1v2c0 .552.447 1 1 1s1-.448 1-1v-2zm-14 2c0 .552-.447 1-1 1s-1-.448-1-1v-2c0-.552.447-1 1-1s1 .448 1 1v2zm1 11.729l.855-.791c1 .484 1.635.852 2.76 1.654 2.113-2.399 3.511-3.616 6.106-5.231l.279.64c-2.141 1.869-3.709 3.949-5.967 7.999-1.393-1.64-2.322-2.686-4.033-4.271z"/>
            </svg>
        </div>
        <form action='/users/timeclock/@Context.Session.GetInt32("UserId")/punch' method="post">
            <button type="submit" class="font-bold uppercase rounded bg-slate-500 text-slate-50 px-4 py-2 w-full hover:bg-slate-400">
                @(Model.ClockedIn ? "Clock Out" : "Clock In")
            </button>
        </form>
    </div>
</div>
