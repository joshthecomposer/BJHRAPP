@await Html.PartialAsync("_NavBar");

<style>
    ::-webkit-calendar-picker-indicator {
    filter: invert(.7);
}
</style>

@model Punch
<div class="mx-50 w-full absolute z-0 top-0 bg-gradient-to-r pt-10 md:px-0 from-[#1C2637] to-slate-900 flex flex-col gap-3">
    @await Html.PartialAsync("_GreetingBar");
    <div class="flex flex-col md:flex-row gap-10 px-5 pb-5 pt-2 md:ml-24 md:mr-5 bg-slate-800 md:mb-5 md:w-auto w-full shadow-lg">
        <div class="flex flex-col gap-3 items-center">
            @await Html.PartialAsync("_TimePuncher", Model)
        </div>
        <div class=" flex flex-col gap-3 items-between w-full">
            <div class="flex flex-col gap-5 md:justify-between md:flex-row">

                <h2 class="text-indigo-400 text-xl font-medium">
                    <span class="font-light tracking-wide text-slate-50">
                    Activity for
                    </span>
                         @ViewBag.Date.ToString("MMMM, dd yyyy")
                </h2>
                <div class="flex justify-between flex-col md:flex-row">
                    <div class="text-slate-50 w-full md:w-auto">
                        <form class="gap-0 flex items-center" action='/users/timeclock/@Context.Session.GetInt32("UserId")/createfilter' method="POST">
                            <label for="Filter" class="text-slate-400 mr-2">Filter by</label>
                            <input name="QueryDate" type="date" class="bg-slate-900 text-slate-400 px-4 mx-0">
                            <button class="font-bold bg-slate-600 text-slate-50 px-1 hover:bg-indigo-500">Search</button>
                            <a href='/users/timeclock/@Context.Session.GetInt32("UserId")' class="font-bold rounded-r-full bg-slate-600 text-slate-50 px-2 hover:bg-teal-500 hover:cursor-pointer align-middle">Today</a>
                        </form>
                    </div>
                </div>
            </div>
            <div class="flex flex-col gap-3 bg-slate-700 max-h-[325px] overflow-y-scroll h-full py-5 px-3">
                @foreach(Punch p in ViewBag.Punches)
                {
                    <div class="flex md:flex-row md:gap-6 gap-2 items-center">
                        <div class="flex gap-2 items-center">
                            <p class="text-slate-400 text-xs md:text-lg">In</p>
                            <p
                                class="bg-slate-800 text-xs w-16 md:w-32 md:text-xl text-slate-400 md:px-4 px-2 py-2 text-xl hover:text-slate-800 hover:bg-slate-400 hover:cursor-pointer">
                                @p.TimeIn.ToLocalTime().ToString("hh:mm tt")
                            </p>
                        </div>
                        <div class="flex gap-2 items-center">
                            <p class="text-slate-400 text-xs md:text-lg">Out</p>
                            <p
                                class="bg-slate-800 text-xs w-16 md:w-32 text-slate-400 md:px-4 px-2 py-2 md:text-xl hover:text-slate-800 hover:bg-slate-400 hover:cursor-pointer">
                                @(p.TimeOut != null ? p.TimeOut?.ToLocalTime().ToString("hh:mm tt") : ". . . ")
                            </p>
                        </div>
                        <div class="flex gap-2 items-center">
                            <p class="text-slate-400 text-xs md:text-lg">Hours</p>
                            <p
                                class="bg-slate-800 w-10 md:w-20 text-slate-400 text-xs md:text-xl md:px-4 px-2 py-2 text-xl hover:text-slate-800 hover:bg-slate-400 hover:cursor-pointer">
                                @(p.TimeOut == null ? ". . ." : Math.Round(((DateTime)p.TimeOut - p.TimeIn).TotalHours, 2))
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="flex flex-col md:flex-row gap-2 p-0">
        <div class="gap-10 px-5 pb-5 pt-2 md:ml-24 bg-slate-800 w-full md:w-1/2 shadow-lg">
            @await Html.PartialAsync("_CustomPunchForm", new Punch())
        </div>
        <div class="flex flex-col md:flex-row gap-10 px-5 pb-5 pt-2 md:mr-5 bg-slate-800 w-full md:w-1/2 shadow-lg">

        </div>
    </div>

</div>