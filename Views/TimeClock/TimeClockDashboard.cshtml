@await Html.PartialAsync("_NavBar");
<div class="mx-50 h-screen w-full fixed z-0 top-0 p-5 bg-gradient-to-r from-[#1C2637] to-slate-900 flex flex-col gap-3">
<div class="p-10 md:p-0 flex-col gap-5 flex">
    <div class="ml-24 mr-5 bg-slate-800 shadow-lg px-6 py-5">
        <div class="flex justify-between">
            <p class="text-slate-50 text-xl">Welcome back, @Context.Session.GetString("FirstName") @Context.Session.GetString("LastName")</p>
            <div>
                <p class="text-slate-50 text-xl">March 13, 2023</p>
            </div>
        </div>
        <h1 class="text-slate-50 text-5xl"></h1>
    </div>
    <div class="ml-24 mr-5 bg-slate-800 shadow-lg px-6 pt-2 pb-4 flex flex-col gap-3">
        <p class="text-slate-50 text-xl">Time Clock</p>
        <div class="flex gap-3">
            <div class="bg-slate-700 p-2 flex flex-col gap-2 justify-center items-center">
                <div class="rounded border-4 border-green-500 p-5 flex flex-col gap-4 w-52 items-center justify-between">
                    <p class="text-green-500 text-xl text-center">You are scheduled to work today</p>
                    <svg class="fill-green-500" xmlns="http://www.w3.org/2000/svg" width="130" height="130" viewBox="0 0 24 24"><path d="M24 2v22h-24v-22h3v1c0 1.103.897 2 2 2s2-.897 2-2v-1h10v1c0 1.103.897 2 2 2s2-.897 2-2v-1h3zm-2 6h-20v14h20v-14zm-2-7c0-.552-.447-1-1-1s-1 .448-1 1v2c0 .552.447 1 1 1s1-.448 1-1v-2zm-14 2c0 .552-.447 1-1 1s-1-.448-1-1v-2c0-.552.447-1 1-1s1 .448 1 1v2zm1 11.729l.855-.791c1 .484 1.635.852 2.76 1.654 2.113-2.399 3.511-3.616 6.106-5.231l.279.64c-2.141 1.869-3.709 3.949-5.967 7.999-1.393-1.64-2.322-2.686-4.033-4.271z"/></svg>
                </div>
                <form action='/users/timeclock/@Context.Session.GetInt32("UserId")/punch' method="post">
                    <button type="submit" class="font-bold uppercase rounded bg-slate-500 text-slate-900 px-4 py-2 w-full">
                        @(ViewBag.LatestPunch.ClockedIn ? "Clock Out" : "Clock In")
                    </button>
                </form>
            </div>
            <div class="bg-slate-700 px-4 py-2 flex flex-col gap-3 items-between justify-center">
                <div class="flex gap-3">
                    <p class="text-slate-50 w-52 px-4 text-2xl">Date</p>
                    <p class="text-slate-50 w-52 px-4 text-2xl">Shift In</p>
                    <p class="text-slate-50 w-52 px-4 text-2xl">Break Start</p>
                    <p class="text-slate-50 w-52 px-4 text-2xl">Break End</p>
                    <p class="text-slate-50 w-52 px-4 text-2xl">Shift Out</p>
                    <p class="text-slate-50 w-52 px-4 text-2xl">Hours</p>
                </div>
                <div class="flex gap-3 flex-wrap">
                    @foreach(Punch p in ViewBag.Punches)
                    {
                        <p class="bg-slate-800 text-slate-400 w-52 px-4 py-2 text-xl text-center">@p.Time.ToLocalTime() @p.ClockedIn</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>
