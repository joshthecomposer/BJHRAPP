@await Html.PartialAsync("_NavBar");

<div class="mx-50 h-screen w-full fixed z-0 top-0 p-5 bg-gradient-to-r from-[#1C2637] to-slate-900 flex flex-col gap-3">
<div class="p-10 md:p-0 flex-col gap-5 flex">
    <div class="ml-24 mr-5 bg-slate-800 shadow-lg px-6 py-5">
        <div class="flex justify-between">
            <div class="flex flex-col gap-2">
                <p class="text-slate-50 text-xl">Welcome back</p>
                <span class="text-slate-50 font-bold text-3xl">@Context.Session.GetString("FirstName") @Context.Session.GetString("LastName")</span>
            </div>
            <div>
                <p class="text-slate-50 text-xl">@DateTime.Now.ToLocalTime().ToString("MMMM dd, yyyy")</p>
            </div>
        </div>
        <h1 class="text-slate-50 text-5xl"></h1>
    </div>
    <div class="ml-24 mr-5 bg-slate-800 shadow-lg px-6 pt-2 pb-4 flex flex-col gap-3">
        @await Html.PartialAsync("_Schedule")
    </div>
</div>
</div>
